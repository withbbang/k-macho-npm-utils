{
  "compilerOptions": {
    "target": "ES2019",
    "module": "ESNext",
    "strict": true,
    "declaration": true,
    "outDir": "dist",
    "moduleResolution": "Bundler",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "emitDeclarationOnly": true,
    "noEmit": false
  },
  "include": ["src", "vite.config.ts"],
  "exclude": ["vite.config.ts", "vite.config.js", "package.json"]
}
